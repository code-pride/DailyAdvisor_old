<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/daily_advisor</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="com.advisor.model.entity.AdvertisementEntity"/>
    <mapping class="com.advisor.model.entity.CalendarEntity"/>
    <mapping class="com.advisor.model.entity.DietEntity"/>
    <mapping class="com.advisor.model.entity.MeetingEntity"/>
    <mapping class="com.advisor.model.entity.RoleEntity"/>
    <mapping class="com.advisor.model.entity.TrainEntity"/>
    <mapping class="com.advisor.model.entity.UserEntity"/>
    <mapping class="com.advisor.model.entity.UserProfileEntity"/>
    <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>